// DAILY TASK PROGRESS (Server-side SSOT)
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model DailyTaskProgress {
  id          String   @id @default(cuid())
  odamage     String   // Renamed from userId for consistency
  dateKey     String   // YYYY-MM-DD (UTC)

  // Counters
  taps            Int @default(0)
  bossDamage      Int @default(0)
  skillUses       Int @default(0)
  chestsOpened    Int @default(0)
  enchantAttempts Int @default(0)
  dismantleCount  Int @default(0)

  // Flags
  loginDone       Boolean @default(false)

  // Claimed flags (JSON object: {taskId: true})
  claimedTasks    Json    @default("{}")

  // Completed tasks (JSON object: {taskId: true}) - for AP tracking
  completedTasks  Json    @default("{}")

  // Activity Points (AP) System
  ap              Int     @default(0)
  apClaimed30     Boolean @default(false)
  apClaimed60     Boolean @default(false)
  apClaimed100    Boolean @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([odamage, dateKey])
  @@index([odamage])
  @@index([dateKey])
}

