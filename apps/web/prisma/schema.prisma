// WEEKLY TASK PROGRESS (Server-side SSOT)
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model WeeklyTaskProgress {
  id          String   @id @default(cuid())
  odamage     String   // Renamed from userId for consistency
  weekKey     String   // YYYY-WW (ISO week number)

  // Counters
  weeklyBossDamage      BigInt @default(0)
  weeklyChestsOpened    Int    @default(0)
  weeklyEnchantAttempts Int    @default(0)
  weeklyInvitesValid    Int    @default(0)
  baseDaysCompleted     Int    @default(0)  // Days where D1-D5 all completed

  // Claimed flags (JSON object: {taskId: true})
  claimedTasks          Json   @default("{}")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([odamage, weekKey])
  @@index([odamage])
  @@index([weekKey])
}
